{
  "name": "databyss-org-workspace",
  "version": "1.0.0",
  "description": "massive open-source citation database platform",
  "main": "index.js",
  "repository": "https://github.com/databyss-org/databyss",
  "author": "pzhine",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "babel-core": "6.26.0",
    "babel-preset-react-app": "^3.1.1",
    "babel-runtime": "6.26.0",
    "jss": "^9.8.7",
    "jss-preset-default": "^4.5.0",
    "object-assign": "4.1.1",
    "promise": "8.0.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-jss": "^8.6.1",
    "redux": "3.7.2",
    "redux-actions": "2.2.1",
    "redux-logger": "3.0.6",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.10",
    "@storybook/addon-links": "^3.4.10",
    "@storybook/addon-options": "^3.4.10",
    "@storybook/addon-storyshots": "^3.4.11",
    "@storybook/addons": "^3.4.10",
    "@storybook/react": "^3.4.10",
    "babel-eslint": "^8.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "copy-webpack-plugin": "^4.5.2",
    "csvtojson": "^2.0.8",
    "eslint": "4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "https://github.com/pzhine/eslint-plugin-import.git#release-temp",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "flow-bin": "^0.79.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "23.6.0",
    "jest-pnp-resolver": "^1.0.1",
    "jest-resolve": "^23.6.0",
    "jest-runner-eslint": "^0.7.1",
    "lorem-ipsum": "^1.0.6",
    "prettier": "1.13.5",
    "prettier-eslint": "^8.8.1",
    "raf": "3.4.0",
    "react-dev-utils": "^5.0.1",
    "react-styleguidist": "^7.3.4",
    "react-test-renderer": "^16.6.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-node-externals": "^1.7.2"
  },
  "scripts": {
    "build": "bash scripts/build.sh",
    "build:ui": "NODE_ENV=production webpack --config packages/databyss-ui/webpack.config.js",
    "test": "node scripts/test.js",
    "flow": "flow",
    "styleguide": "styleguidist server --config ./config/styleguide.config.js",
    "styleguide:build": "styleguidist build --config ./config/styleguide.config.js",
    "storybook": "start-storybook -h 0.0.0.0 -p 6006 -s ./packages/databyss-ui/public",
    "storybook:build": "build-storybook -o build -s ./packages/databyss-ui/public && node scripts/sb-publish.js Databyss",
    "lint": "eslint . --cache && echo \"eslint: no lint errors\""
  },
  "jest": {
    "projects": [
      {
        "displayName": "lint",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/packages/**/*.js"
        ]
      },
      {
        "displayName": "test",
        "collectCoverageFrom": [
          "**/*.js"
        ],
        "resolver": "jest-pnp-resolver",
        "setupFiles": [
          "<rootDir>/config/polyfills.js"
        ],
        "testMatch": [
          "<rootDir>/**/*.test.js"
        ],
        "testEnvironment": "jsdom",
        "testURL": "http://localhost",
        "transform": {
          "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
          "^(?!.*\\.(js|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
          "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
        ],
        "moduleFileExtensions": [
          "js",
          "json"
        ]
      }
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
